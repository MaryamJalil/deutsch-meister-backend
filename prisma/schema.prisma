generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  role         Role     @default(STUDENT)
  refreshToken String?
  createdAt    DateTime @default(now())
}

enum Role {
  ADMIN
  STUDENT
  TEACHER
}
